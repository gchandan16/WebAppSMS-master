@model WEB.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/aes.js"></script>
<script src="~/Scripts/Login/Login.js"></script>
<div class="row">
    <div class="col-md-4 form-holder">

        <!--Form with header-->
        <div class="margin-lf">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { }))
            {
                @Html.AntiForgeryToken()
                @*<form action="mail.php" method="post">*@
                <div class="card border-primary rounded-0" style="border-radius: 18px !important;">
                    <div class="card-header p-0">
                        <div class="bg-info text-white text-center py-2">
                            <h3>
                                <i class="fa fa-user" aria-hidden="true" style="color: #555 !important;"></i> SIGN
                                IN
                            </h3>
                        </div>
                    </div>
                    <div class="card-body p-3">
                        <!--Body-->
                        @{Html.RenderPartial("_Message", Model);}
                        <div class="form-group">
                            <div class="input-group mb-2 mb-3" style="margin-bottom:30px !important;">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <i class="fa fa-user text-info"></i>
                                    </div>
                                </div>
                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "User Name", title = "Enter User Name" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <i class="fa fa-envelope text-info"></i>
                                    </div>
                                </div>
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control form-controal2", @placeholder = "Password", @style = "font-size: 11px", title = "Enter Password"})
                                @*<input type="password" class="form-control" id="nombre" name="email" placeholder="Passward"
                                    required>*@
                            </div>
                        </div>



                        <div class="text-center">
                            <input type="submit" value="Submit" style="margin-bottom:30px !important; position:relative;top:12px; font-size:15px !important;" class="btn btn-info btn-block rounded-0 py-2 loginbtnvld" >
                        </div>
                        <div class="col-md-12">
                            <h6 class="text-center" style="margin-top: 17px; margin-bottom: 4px;">
                                <a href="/Account/ForgotPassword">Forgot Password</a>
                            </h6>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>

</div>

<script>
    $(document).ready(function () {
    var msg = '@TempData["Msg"]';
    if (msg != "") {
        alert(msg);
        }
    });
</script>