@if (TempData.Keys.Contains("info"))
{

    <div class="alert alert-info alert-dismissible" id="info_msg" style="margin-bottom: 1.25% !important;margin-top: -1.4% !important;">
        <button type="button" class="close" data-dismiss="alert">
            &times;
        </button>
        <strong>Information !</strong>
        @Html.Raw(@TempData["Info"])
    </div>
}
@if (TempData.Keys.Contains("success"))
{
    <div class="alert alert-success alert-dismissible" id="success_msg" style="margin-bottom: 1.25% !important;margin-top: -1.4% !important;">
        <button type="button" class="close" data-dismiss="alert">
            &times;
        </button>
        <strong>Success !</strong>
        @Html.Raw(@TempData["success"])
    </div>


}
@if (TempData.Keys.Contains("error"))
{
    <div class="alert alert-danger alert-dismissible" id="error_msg" style="margin-bottom: 1.25% !important;margin-top: -1.4% !important;">
        <button type="button" class="close" data-dismiss="alert">
            &times;
        </button>
        <strong>Error !</strong>
        @Html.Raw(@TempData["error"])
    </div>
}
@if (TempData.Keys.Contains("warning"))
{
    <div class="alert alert-warning alert-dismissible" id="warning_msg" style="margin-bottom: 1.25% !important;margin-top: -1.4% !important;">
        <button type="button" class="close" data-dismiss="alert">
            &times;
        </button>
        <strong>Warning !</strong>
        @Html.Raw(@TempData["warning"])
    </div>
}
<script src="/Scripts/jquery-3.3.1.min.js" type="text/javascript"></script>
<script src="/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
<script src="/Scripts/jquery.dataTables.min.js" type="text/javascript"></script>
<script type="text/javascript">

    $(document).ready(function () {
        setTimeout(function () {
            $('#info_msg').hide();
            $('#success_msg').hide();
            $('#error_msg').hide();
            $('#warning_msg').hide();

        }, 15000);

    });

</script>

